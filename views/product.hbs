<div class="row">
    <div class="product-layout col-md-8 col-md-offset-2">
        <div class="col-md-6">  
            {{#if result.product_image}}
                <div class="vertical-center title-image-container">
                    <img src="{{result.product_image}}" id="product-title-image" class="product-title-image img-responsive" alt="...">
                </div>  
            {{else}}
                <div class="vertical-center title-image-container">
                    <img src="/uploads/placeholder.png" id="product-title-image" class="product-title-image img-responsive" alt="...">
                </div>
            {{/if}}
            {{#ifCond images.length '>' 1}}
                {{#each images}}     
                    <div class="vertical-center thumbnail-image-container top-pad-20 col-xs-6 col-md-3">
                        <img src="{{this.path}}" class="thumbnail-image img-responsive">
                    </div>
                {{/each}}
            {{/ifCond}}  
        </div>
        <div class="col-md-6">
            <h1 class="product-title">{{result.product_title}}</h1>
            <h4 class="product-price">${{result.product_price}}</h4>
            <h4 class="product-option">Options</h4>
            <p>
                <div class="row">
                    <div class="col-md-6">
                        <p class="product-option-text">Quantity</p>
                        <div class="input-group">
                            <span class="input-group-btn">
                                <button class="btn qty-btn-minus" type="button">-</button>
                            </span>
                            <input type="text" class="form-control add-color text-center" id="product_quantity" maxlength="3" value="1">
                            <span class="input-group-btn">
                                <button class="btn qty-btn-plus" type="button">+</button>
                            </span>
                        </div>
                    </div>
                </div>
            </p>
            <p>
                <div class="row">
                    <div class="col-md-6">
                        <button class="btn btn-primary btn-block product-add-to-cart" type="button">Add to cart</button>
                    </div>
                </div>
            </p>
            <p class="seporator"></p>
            <p class="body_text">
                {{{product_description}}}
            </p>
        </div>
    </div>  
</div>
<input type="hidden" id="product_id" value="{{result._id}}">